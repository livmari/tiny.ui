{
  "name": "tiny.ui",
  "author": "Liv Mari <hello@livmari.io> (https://livmari.io/)",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Tiny React UI component library.",
  "keywords": [
    "react",
    "typescript",
    "storybook",
    "component",
    "components",
    "ui"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "format:write": "yarn prettier --write .",
    "format:check": "yarn prettier --check .",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/tiny.ui.esm.js",
  "size-limit": [
    {
      "path": "dist/tiny.ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/tiny.ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@storybook/addon-a11y": "^6.4.13",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.4.13",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.4.13",
    "@storybook/react": "^6.4.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "husky": "^7.0.4",
    "postcss": "^8.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^7.0.5",
    "tailwindcss": "^3.0.15",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  }
}
